@using Toltek.Models;
@model Toltek.Campus.Courses.ViewModels.Activity
@if (Model.EnrollmentsTotal > 0)
{
    @if (Model.EnrollmentsTotal == Model.EnrollmentsCount)
    {
        <a href="@($"/{Model.ActivityType}/Enrollments/{Model.ActivityId}?Status=3")">
            <span class="badge border border-success text-success" title="Tüm Öğrenciler Katıldı">
                <i class="fa fa-check mr-1"></i>
                @Model.EnrollmentsTotal
            </span>
        </a>
    }
    else
    {
        if (Model.EnrollmentsCount > 0)
        {
            <a href="@($"/{Model.ActivityType}/Enrollments/{Model.ActivityId}?Status=3")">
                <span class="badge border border-success text-success" title="Katılan Öğrenci Sayısı">
                    @Model.EnrollmentsCount
                </span>
            </a>

        }
        <a href="@($"/{Model.ActivityType}/Enrollments/{Model.ActivityId}?Status=0")">
            <span class="badge border border-danger text-danger" title="Katılmayan Öğrenci Sayısı">
                @(Model.EnrollmentsTotal - Model.EnrollmentsCount)
            </span>
        </a>

    }

}
else
{
    <span>-</span>
}

